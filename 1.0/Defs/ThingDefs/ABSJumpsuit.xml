<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="ABSArmorBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ABSPolymerworkTable</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
  <ThingDef ParentName="ABSArmorBase">
    <defName>Apparel_ABSJumpsuit</defName>
    <label>ABS Jumpsuit</label>
    <description>A good Tactical Jumpsuit mirrors your every move, holds all your gear, and protects you from the never-ending hazards you run into.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <researchPrerequisite>ABSPolymerWeaveProduction</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/ABSJumpsuit</texPath>
      <graphicClass>Graphic_single</graphicClass>
    </graphicData>
    <costList>
      <ABSPolymerWeave>125</ABSPolymerWeave>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MarketValue>600</MarketValue>
      <Mass>0.8</Mass>
      <WorkToMake>7000</WorkToMake>
      <MaxHitPoints>400</MaxHitPoints>
      <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.45</ArmorRating_Sharp>
      <ArmorRating_Heat>0.3</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>10</StuffEffectMultiplierInsulation_Cold>
      <Insulation_Heat>15</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <WorkSpeedGlobal>0.10</WorkSpeedGlobal>
      <MoveSpeed>0.10</MoveSpeed>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
      <SocialImpact>0.10</SocialImpact>
    </equippedStatOffsets>
    <generateAllowChance>0.03</generateAllowChance>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Torso</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/ABSJumpsuit</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Military</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>3</weight>
          <only>RGBA(0.7,0.9,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>